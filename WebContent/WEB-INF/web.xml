    <exception-type>javax.faces.application.ViewExpiredException</exception-type>
    <location>/index.jsf?facesExpired=true</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/faces/errors/401.jsf</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/faces/errors/403.jsf</location>
  </error-page>

    <error-code>404</error-code>
    <location>/faces/errors/404.jsf</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/faces/errors/500.jsf</location>
  </error-page> -->
  <security-constraint>
    <display-name>Restrict XHTML Documents</display-name>
    <web-resource-collection>
      <web-resource-name>XHTML</web-resource-name>
      <url-pattern>*.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint/>
  </security-constraint>
   <filter>
    <filter-name>HibernateFilter</filter-name>
    <filter-class>com.wo.epos.common.filter.HibernateRequestFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HibernateFilter</filter-name>
    <url-pattern>/faces/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>JSF Redirect Filter</filter-name>
    <filter-class>com.wo.epos.common.filter.JSFRedirectFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>JSF Redirect Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping> 
  <filter>
    <filter-name>GzipFilter</filter-name>
    <filter-class>com.whiteopen.web.util.gzip.GZIPFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.jsf</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.js</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.css</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.xhtml</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  
 
</web-app>